{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "test": "mocha --exit -r app.js --check-leaks --recursive -R dot test",
    "test:watch": "nodemon -e js,json,yaml --exec bash -c 'time npm test; date' ."
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sinon": "^11.1.2",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "chai": "^4.3.4",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "mocha": "^9.1.1",
    "sirv-cli": "^1.0.0"
  }
}
