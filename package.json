{
  "name": "sunrise-alarm",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "DISABLE_LOGGING=1 rollup -c",
    "dev": "DISABLE_LOGGING=1 rollup -c -w",
    "start": "sirv public --no-clear",
    "test": "TZ='America/Chicago' DISABLE_LOGGING=1 NODE_CONFIG_ENV=test jest --runInBand",
    "test:watch": "nodemon -e js,json,yaml --exec bash -c 'time npm test; date' ."
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^3.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.13",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sinon": "^11.1.2",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "chai": "^4.3.4",
    "express": "^4.17.1",
    "luxon": "^2.0.2",
    "pino": "^6.13.3",
    "pino-pretty": "^7.0.1",
    "sirv-cli": "^1.0.0",
    "ws2801-pi": "^1.2.0"
  }
}
